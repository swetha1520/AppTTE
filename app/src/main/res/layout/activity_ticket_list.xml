<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/ticketImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ticket"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trainName1"
                android:text="Train Name"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/journeyDate"
                android:text="Date: 27/05/2021"
                android:textStyle="italic"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reservedseats"
                android:text="Seats: 60"
                android:textStyle="italic"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/journeytime"
                android:text="Time: 3:00 - 15:00"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"/>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalprice"
                android:text="Price: 2400/-"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>





    </LinearLayout>
</LinearLayout>